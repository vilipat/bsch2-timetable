<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Timetable.MessageBox"
        Title="MessageBox" WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight" CanResize="False" >

  <DockPanel MaxWidth="300" MinHeight="200" >


    <StackPanel DockPanel.Dock="Bottom" Margin="10" Spacing="10" Orientation="Horizontal"
                VerticalAlignment="Bottom" HorizontalAlignment="Right">
      <Button x:Name="ConfirmBtn" Click="Button_Click" Classes="control btn-prim">Confirm</Button>
    </StackPanel>

    <!-- View -->
    <TextBlock TextWrapping="Wrap" Name="Message" Padding="20" FontSize="16" />

  </DockPanel>
  
</Window>
