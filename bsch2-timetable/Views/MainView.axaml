<UserControl xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vm="using:Timetable.ViewModels"
	xmlns:local="clr-namespace:Timetable.Views;assembly=Timetable"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	x:Class="Timetable.MainView">

	<!-- <Design.DataContext> -->
	<!-- 	<vm:MainWindowViewModel /> -->
	<!-- </Design.DataContext> -->

	<TabControl Name="MainTabControl" VerticalAlignment="Stretch" SelectedItem="{Binding SelectedTab}">

    <!-- https://github.com/AvaloniaUI/Avalonia/issues/10958 -->

    <TabItem Header="{DynamicResource Lang.Persons}" DataContext="{Binding PersonsViewModel}" >
			<local:PersonsView DataContext="{Binding PersonsViewModel}"  />
		</TabItem>

		<TabItem Header="{DynamicResource Lang.Activities}" DataContext="{Binding ActivitesViewModel}" >
			<local:ActivitiesView DataContext="{Binding ActivitesViewModel}" />
		</TabItem>

    <TabItem Header="{DynamicResource Lang.ActivitySlots}" DataContext="{Binding ActivitySlotsViewModel}" >
      <local:ActivitySlotsView DataContext="{Binding ActivitySlotsViewModel}" />
    </TabItem>

	</TabControl>
</UserControl>
